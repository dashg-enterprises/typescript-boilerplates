{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "types": ["reflect-metadata"],
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "out",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*"
    ]
}