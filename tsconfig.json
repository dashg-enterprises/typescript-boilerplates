{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "types": ["reflect-metadata"],
        "skipLibCheck": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "out",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*"
    ]
}